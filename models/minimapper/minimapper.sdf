        <use_parent_model_frame>0</use_parent_model_frame>
      </axis>
    </joint>
  
  <!-- Ultrasonic Radar -->
  <include>
    <uri>model://sonar</uri>
    <pose>0.04 0 0.095 0 0 0</pose>
    <plugin name="sonar_control" filename="sonar.so">
      <velocity>1.0</velocity>
      <pid>
        <p>0.01</p>
        <i>0</i>
        <d>0</d>
      </pid>
    </plugin>
  </include>

  <joint name="sonar_joint" type="fixed">
    <pose>0.04 0 0.095 0 0 0</pose>
    <parent>body</parent>
    <child>sonar::shaft</child>
  </joint>

  </model>
</sdf>