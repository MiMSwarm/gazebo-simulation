      <collision name="fr_col">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="fr_col">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="fr_joint" type="revolute">
      <parent>chasis</parent>
      <child>wheel_fr</child>
      <axis>
        <xyz>0 0 1</xyz>
        <use_parent_model_frame>0</use_parent_model_frame>
