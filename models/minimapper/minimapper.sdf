<?xml version="1.0"?>
<sdf version="1.6">
  <model name="minimapper">

    <!-- Body of the MM -->
    <link name="chasis">
      <pose>0 0 0.055 0 0 0</pose>
      <inertial>
        <mass>0.3</mass>
        <inertia>
          <ixx>5.2e-5</ixx>
          <iyy>8.0e-4</iyy>
          <izz>1.0e-3</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>
      <collision name="mm_col">
        <geometry>
          <box><size>0.16 0.12 0.08</size></box>
        </geometry>
      </collision>
      <visual name="mm_vis">
        <geometry>
          <box><size>0.16 0.12 0.08</size></box>
        </geometry>
      </visual>
    </link>

    <!-- Front Right Wheel of the MM and joint. -->
