        <xyz>0 0 1</xyz>
        <use_parent_model_frame>0</use_parent_model_frame>
      </axis>
    </joint>


    <!-- Rear Left Wheel of the MM and joint. -->
    <link name="wheel_rl">
      <pose>-0.035 -0.07 0.03 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.000150</ixx>
          <iyy>0.000150</iyy>
          <izz>0.000225</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>
      <collision name="wheel_rl_collision">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_rl_visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
