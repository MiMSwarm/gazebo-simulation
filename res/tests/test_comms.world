<?xml version="1.0"?>

<!-- To test a single robot -->
<sdf version="1.6">
  <world name="test_comms">

    <!-- A global light source -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- A ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Cool robots -->
    <include>
      <name>Simon</name>
      <uri>model://minimapper</uri>
      <pose>0 -1 0 0 0 0</pose>
    </include>

    <include>
      <name>Garfunkel</name>
      <uri>model://minimapper</uri>
      <pose>0 1 0 0 0 0</pose>
    </include>

  </world>
</sdf>
