<?xml version="1.0"?>

<!--

  Meet the Visions.

  The visual system for a MiM. Can detect and
  range objects within its visual cone. Allows
  the MiM to "stick its neck out" for mapping.

-->

<sdf version="1.6">
  <model name="vision">


    <!--
      The Neck of the Visual System
      -----------------------------
    -->

    <link name="neck">

      <pose>0 0 0.025 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.00002646</ixx>
          <iyy>0.00002646</iyy>
          <izz>0.00001125</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>

      <collision name="shaft_collision">
        <geometry>
          <cylinder>
            <radius>0.015</radius>
            <length>0.050</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="shaft_visual">
        <geometry>
          <cylinder>
            <radius>0.015</radius>
            <length>0.050</length>
          </cylinder>
        </geometry>
      </visual>
    </link>


    <!--
      The Head of the Visual System
      -----------------------------
    -->

    <link name="head">

      <pose>0 0 0.060 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.00003333</ixx>
          <iyy>0.00001667</iyy>
          <izz>0.00004333</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>

      <collision name="head_collision">
        <geometry>
          <box><size>0.04 0.06 0.02</size></box>
        </geometry>
      </collision>

      <visual name="head_visual">
        <geometry>
          <box><size>0.04 0.06 0.02</size></box>
        </geometry>
      </visual>
    </link>


    <!--
      The Top Joint of the Neck
      -------------------------

      The bottom is attached to the MiM.
    -->

    <joint name="neck_top_joint" type="revolute">

      <pose>0 0 -0.01 0 0 0</pose>
      <parent>shaft</parent>
      <child>head</child>

      <axis>
        <xyz>0 0 1</xyz>
        <initial_position>-1.3091</initial_position>
        <limit>
          <lower>-1.309</lower>
          <upper>1.309</upper>
        </limit>
      </axis>
    </joint>


    <!--
      The Left Eye
      ------------

      The reciever for Ultrasonic sensor is on
      this eye.
    -->

    <link name="eye_left">

      <pose>0.0275 0.015 0.06 0 1.5708 3.1416</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.00000219</ixx>
          <iyy>0.00000219</iyy>
          <izz>0.00000250</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>

      <collision name="eye_left_collision">
        <geometry>
          <cylinder>
            <radius>0.010</radius>
            <length>0.015</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="eye_left_visual">
        <geometry>
          <cylinder>
            <radius>0.010</radius>
            <length>0.015</length>
          </cylinder>
        </geometry>
      </visual>

      <!--
        A Ray sensor acting as an Ultrasonic sensor.
      -->
      <sensor name="sonar_sensor" type="ray">
        <pose>0 0 0 0 1.5708 0</pose>
        <always_on>1</always_on>
        <update_rate>100</update_rate>
        <visualize>1</visualize>

        <ray>
          <scan>
            <horizontal>
              <samples>32</samples>
              <resolution>1</resolution>
              <min_angle>-0.1309</min_angle>
              <max_angle>0.1309</max_angle>
            </horizontal>
          </scan>

          <range>
            <min>0.02</min>
            <max>5.00</max>
            <resolution>0.02</resolution>
          </range>
        </ray>

      </sensor>
    </link>

    <!--
      Fix the Eye to the Head.
    -->
    <joint name="eye_left_joint" type="fixed">
      <parent>head</parent>
      <child>eye_left</child>
    </joint>


    <!--
      The Right Eye
      -------------

      Simply for aesthetics.
    -->
    <link name="eye_right">

      <pose>0.0275 -0.015 0.06 0 1.5708 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.00000219</ixx>
          <iyy>0.00000219</iyy>
          <izz>0.00000250</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>
      <collision name="eye_right_collision">
        <geometry>
          <cylinder>
            <radius>0.010</radius>
            <length>0.015</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="eye_right_visual">
        <geometry>
          <cylinder>
            <radius>0.010</radius>
            <length>0.015</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <!--
      Fix the Eye to the Head.
    -->
    <joint name="eye_right_joint" type="fixed">
      <parent>head</parent>
      <child>eye_right</child>
    </joint>


    <!--
      Vision Control System
      ---------------------
    -->

    <plugin name="vison_control" filename="vision.so">
      <velocity>0.5</velocity>
      <pid>
        <p>0.005</p>
        <i>0</i>
        <d>0</d>
      </pid>
    </plugin>


  </model>
</sdf>
