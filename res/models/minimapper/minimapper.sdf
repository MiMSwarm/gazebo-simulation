<?xml version="1.0"?>

<!--

  Meet the MiMs.

  The cool kids of the block, these guys are the
  heart and soul of this project. Coordinate to
  map out the Hood for search and rescue.

-->

<sdf version="1.6">
  <model name="minimapper">


    <!--
      The Body of the MiM
      -------------------
    -->

    <link name="body">

      <pose>0 0 0.055 0 0 0</pose>
      <inertial>
        <mass>0.6</mass>
        <inertia>
          <ixx>0.00104</ixx>
          <iyy>0.00160</iyy>
          <izz>0.00200</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>

      <collision name="body_collision">
        <geometry>
          <box><size>0.16 0.12 0.08</size></box>
        </geometry>
      </collision>

      <visual name="body_visual">
        <geometry>
          <box><size>0.16 0.12 0.08</size></box>
        </geometry>
      </visual>
    </link>


    <!--
      Front Right Wheel of the MiM
      ----------------------------
    -->

    <link name="wheel_fr">
      <pose>0.035 0.075 0.03 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.000150</ixx>
          <iyy>0.000150</iyy>
          <izz>0.000225</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>
      <collision name="wheel_fr_collision">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_fr_visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="wheel_fr_joint" type="revolute">
      <parent>body</parent>
      <child>wheel_fr</child>
      <axis>
        <xyz>0 0 1</xyz>
        <use_parent_model_frame>0</use_parent_model_frame>
      </axis>
    </joint>


    <!--
      Front Left Wheel of the MiM
      ---------------------------
    -->

    <link name="wheel_fl">
      <pose>0.035 -0.07 0.03 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.000150</ixx>
          <iyy>0.000150</iyy>
          <izz>0.000225</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>
      <collision name="wheel_fl_collision">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_fl_visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="wheel_fl_joint" type="revolute">
      <parent>body</parent>
      <child>wheel_fl</child>
      <axis>
        <xyz>0 0 1</xyz>
        <use_parent_model_frame>0</use_parent_model_frame>
      </axis>
    </joint>


    <!--
      Rear Right Wheel of the MiM
      ---------------------------
    -->

    <link name="wheel_rr">
      <pose>-0.035 0.075 0.03 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.000150</ixx>
          <iyy>0.000150</iyy>
          <izz>0.000225</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>
      <collision name="wheel_rr_collision">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_rr_visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="wheel_rr_joint" type="revolute">
      <parent>body</parent>
      <child>wheel_rr</child>
      <axis>
        <xyz>0 0 1</xyz>
        <use_parent_model_frame>0</use_parent_model_frame>
      </axis>
    </joint>


    <!--
      Rear Left Wheel of the MiM
      ---------------------------
    -->

    <link name="wheel_rl">
      <pose>-0.035 -0.07 0.03 1.5708 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.000150</ixx>
          <iyy>0.000150</iyy>
          <izz>0.000225</izz>
          <ixy>0</ixy>
          <iyz>0</iyz>
          <ixz>0</ixz>
        </inertia>
      </inertial>
      <collision name="wheel_rl_collision">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="wheel_rl_visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="wheel_rl_joint" type="revolute">
      <parent>body</parent>
      <child>wheel_rl</child>
      <axis>
        <xyz>0 0 1</xyz>
        <use_parent_model_frame>0</use_parent_model_frame>
      </axis>
    </joint>


    <!--
      The Visual System
      -----------------
    -->

    <include>
      <uri>model://vision</uri>
      <pose>0.04 0 0.095 0 0 0</pose>
    </include>

    <joint name="neck_base_joint" type="fixed">
      <pose>0.04 0 0.095 0 0 0</pose>
      <parent>body</parent>
      <child>vision::neck</child>
    </joint>


    <!--
      MiM Control System
      ------------------
    -->

    <plugin name="mim_control" filename="minimapper.so">
    </plugin>


  </model>
</sdf>
